
<MudPaper Class="pa-4" MaxWidth="MaxWidth.Medium" Style="width: 500px;">
    <MudText Typo="Typo.h6" Style="margin-bottom:20px;">Delete Project</MudText>
    <MudText>Are you sure you want to delete this project?</MudText>
    <MudButton Color="Color.Error" OnClick="Confirm" Style="margin-top: 20px;">Yes</MudButton>
    <MudButton Color="Color.Secondary" OnClick="Cancel" Style="margin-top: 20px;">No</MudButton>
</MudPaper>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    private void Confirm()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
